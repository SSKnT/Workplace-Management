@model IEnumerable<AttendanceSystem.Models.Course>
@{
    ViewData["Title"] = "Mark Attendance";
}

<div class="mb-4">
    <h2><i class="bi bi-check2-square"></i> Mark Attendance</h2>
    <p class="text-muted">Select a course to mark attendance</p>
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
            <p class="text-muted mt-3">No courses available for attendance marking.</p>
            <a asp-controller="Course" asp-action="Create" class="btn btn-primary mt-2">
                <i class="bi bi-plus-circle"></i> Create a Course
            </a>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-book"></i> @course.Name
                        </h5>
                        <p class="card-text">
                            <strong class="text-primary">@course.CourseCode</strong><br/>
                            @if (course.Teacher != null)
                            {
                                <small class="text-muted">
                                    <i class="bi bi-person-badge"></i> @course.Teacher.FullName
                                </small>
                            }
                        </p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge bg-secondary">
                                @course.Enrollments.Count students
                            </span>
                            <div class="btn-group">
                                <a asp-action="Mark" asp-route-id="@course.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-check2-square"></i> Mark
                                </a>
                                <a asp-action="ExportCourseSummary" asp-route-id="@course.Id" class="btn btn-sm btn-outline-primary" title="Export Summary">
                                    <i class="bi bi-file-earmark-pdf"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
