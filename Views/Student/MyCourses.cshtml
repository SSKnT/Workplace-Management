@model List<AttendanceSystem.ViewModels.StudentCourseViewModel>
@{
    ViewData["Title"] = "My Courses";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1 class="page-title mb-2">My Courses</h1>
            <p class="page-subtitle mb-0">View your enrolled courses and track attendance</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="AvailableCourses" class="btn btn-gradient">
                <i class="bi bi-plus-circle"></i> Enroll in Courses
            </a>
            @if (Model.Any())
            {
                <a asp-action="ExportMyAttendance" class="btn btn-outline-gradient">
                    <i class="bi bi-file-earmark-pdf"></i> Export PDF
                </a>
            }
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="bi bi-book"></i>
        </div>
        <h3 class="empty-state-title">No Courses Yet</h3>
        <p class="empty-state-text">You haven't enrolled in any courses. Start learning by browsing available courses.</p>
        <a asp-action="AvailableCourses" class="btn btn-gradient btn-lg">
            <i class="bi bi-plus-circle"></i> Browse Available Courses
        </a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var courseViewModel in Model)
        {
            var attendanceClass = courseViewModel.AttendancePercentage >= 75 ? "success" : 
                                  courseViewModel.AttendancePercentage >= 50 ? "warning" : "danger";
            var attendanceStatus = courseViewModel.AttendancePercentage >= 75 ? "Excellent" : 
                                   courseViewModel.AttendancePercentage >= 50 ? "Fair" : "Poor";
            
            <div class="col-md-6 col-xl-4">
                <div class="course-card">
                    <div class="course-card-header">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="course-code">@courseViewModel.Course.CourseCode</span>
                            <span class="badge bg-@attendanceClass">@attendanceStatus</span>
                        </div>
                        <h5 class="course-title">@courseViewModel.Course.Name</h5>
                        <div class="course-teacher">
                            <i class="bi bi-person-circle"></i>
                            @(courseViewModel.Course.Teacher?.FullName ?? "No teacher assigned")
                        </div>
                    </div>
                    
                    <div class="course-card-body">
                        <div class="attendance-stats">
                            <div class="attendance-header">
                                <span class="attendance-label">Attendance Rate</span>
                                <span class="attendance-value">@courseViewModel.AttendancePercentage.ToString("F1")%</span>
                            </div>
                            <div class="progress-modern">
                                <div class="progress-bar-modern bg-@attendanceClass" 
                                     style="width: @courseViewModel.AttendancePercentage%">
                                </div>
                            </div>
                            <div class="attendance-details">
                                <span><i class="bi bi-check-circle text-success"></i> @courseViewModel.AttendedClasses Present</span>
                                <span><i class="bi bi-calendar3"></i> @courseViewModel.TotalClasses Total</span>
                            </div>
                        </div>
                        
                        <div class="course-actions">
                            <a asp-action="MyAttendance" asp-route-id="@courseViewModel.Course.Id" 
                               class="btn btn-light-primary w-100 mb-2">
                                <i class="bi bi-list-check"></i> View Attendance Details
                            </a>
                            <div class="d-flex gap-2">
                                <a asp-action="ExportCourseAttendance" asp-route-id="@courseViewModel.Course.Id" 
                                   class="btn btn-outline-secondary flex-fill">
                                    <i class="bi bi-download"></i> Export PDF
                                </a>
                                <button type="button" class="btn btn-outline-danger" 
                                        data-bs-toggle="modal" 
                                        data-bs-target="#dropModal@(courseViewModel.Course.Id)">
                                    <i class="bi bi-x-circle"></i> Drop
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="course-card-footer">
                        <i class="bi bi-calendar-check"></i> Enrolled @courseViewModel.EnrolledDate.ToString("MMM dd, yyyy")
                    </div>
                </div>
                
                <!-- Drop Course Modal -->
                <div class="modal fade" id="dropModal@(courseViewModel.Course.Id)" tabindex="-1">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title">Drop Course</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                            </div>
                            <div class="modal-body">
                                <p>Are you sure you want to drop <strong>@courseViewModel.Course.Name</strong>?</p>
                                <p class="text-danger mb-0"><i class="bi bi-exclamation-triangle"></i> This action will deactivate your enrollment.</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                <form asp-action="DropCourse" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="courseId" value="@courseViewModel.Course.Id" />
                                    <button type="submit" class="btn btn-danger">
                                        <i class="bi bi-x-circle"></i> Drop Course
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
