@model List<AttendanceSystem.ViewModels.StudentCourseViewModel>
@{
    ViewData["Title"] = "My Courses";
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-book"></i> My Courses</h2>
            <p class="text-muted mb-0">View your enrolled courses and attendance</p>
        </div>
        @if (Model.Any())
        {
            <a asp-action="ExportMyAttendance" class="btn btn-outline-primary">
                <i class="bi bi-file-earmark-pdf"></i> Export All Attendance
            </a>
        }
    </div>
</div>

@if (!Model.Any())
{
    <div class="card">
        <div class="card-body text-center py-5">
            <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
            <p class="text-muted mt-3">You are not enrolled in any courses yet.</p>
        </div>
    </div>
}
else
{
    <div class="row">
        @foreach (var courseViewModel in Model)
        {
            var attendanceClass = courseViewModel.AttendancePercentage >= 75 ? "success" : 
                                  courseViewModel.AttendancePercentage >= 50 ? "warning" : "danger";
            
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">
                            <i class="bi bi-book-fill text-primary"></i> @courseViewModel.Course.Name
                        </h5>
                        <p class="card-text">
                            <strong>@courseViewModel.Course.CourseCode</strong><br/>
                            <small class="text-muted">
                                <i class="bi bi-person-badge"></i> 
                                @(courseViewModel.Course.Teacher?.FullName ?? "No teacher assigned")
                            </small>
                        </p>
                        
                        <div class="mb-3">
                            <div class="d-flex justify-content-between mb-1">
                                <span class="small">Attendance</span>
                                <span class="small fw-bold">@courseViewModel.AttendancePercentage.ToString("F1")%</span>
                            </div>
                            <div class="progress" style="height: 10px;">
                                <div class="progress-bar bg-@attendanceClass" role="progressbar" 
                                     style="width: @courseViewModel.AttendancePercentage%" 
                                     aria-valuenow="@courseViewModel.AttendancePercentage" 
                                     aria-valuemin="0" aria-valuemax="100">
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-between align-items-center">
                            <small class="text-muted">
                                @courseViewModel.AttendedClasses / @courseViewModel.TotalClasses classes
                            </small>
                            <div class="btn-group">
                                <a asp-action="MyAttendance" asp-route-id="@courseViewModel.Course.Id" 
                                   class="btn btn-sm btn-outline-primary">
                                    <i class="bi bi-list-check"></i> Details
                                </a>
                                <a asp-action="ExportCourseAttendance" asp-route-id="@courseViewModel.Course.Id" 
                                   class="btn btn-sm btn-outline-secondary" title="Export PDF">
                                    <i class="bi bi-file-earmark-pdf"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-footer text-muted small">
                        <i class="bi bi-calendar-check"></i> Enrolled: @courseViewModel.EnrolledDate.ToString("MMM dd, yyyy")
                    </div>
                </div>
            </div>
        }
    </div>
}
