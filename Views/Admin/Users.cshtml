@model IEnumerable<AttendanceSystem.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1 class="page-title mb-2">User Management</h1>
            <p class="page-subtitle mb-0">Manage all system users and roles</p>
        </div>
        <a asp-action="CreateUser" class="btn btn-gradient">
            <i class="bi bi-person-plus-fill"></i> Create New User
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success-modern alert-dismissible fade show" role="alert">
        <div class="alert-icon">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        <div class="alert-content">
            @TempData["Success"]
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger-modern alert-dismissible fade show" role="alert">
        <div class="alert-icon">
            <i class="bi bi-exclamation-triangle-fill"></i>
        </div>
        <div class="alert-content">
            @TempData["Error"]
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="bi bi-people"></i>
        </div>
        <h3 class="empty-state-title">No Users Found</h3>
        <p class="empty-state-text">Start by creating your first user account.</p>
        <a asp-action="CreateUser" class="btn btn-gradient btn-lg">
            <i class="bi bi-person-plus-fill"></i> Create First User
        </a>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var user in Model)
        {
            <div class="col-md-6 col-xl-4">
                <div class="user-card">
                    <div class="user-card-header">
                        <div class="user-avatar">
                            <i class="bi bi-person-circle"></i>
                        </div>
                        <div class="user-info">
                            <h5 class="user-name">@user.FullName</h5>
                            <p class="user-email">@user.Email</p>
                        </div>
                    </div>
                    
                    <div class="user-card-body">
                        <div class="user-meta">
                            <div class="meta-item">
                                <span class="meta-label">Role</span>
                                @if (user.Role == "Admin")
                                {
                                    <span class="role-badge role-admin">
                                        <i class="bi bi-shield-fill-check"></i> Admin
                                    </span>
                                }
                                else if (user.Role == "Teacher")
                                {
                                    <span class="role-badge role-teacher">
                                        <i class="bi bi-person-workspace"></i> Teacher
                                    </span>
                                }
                                else
                                {
                                    <span class="role-badge role-student">
                                        <i class="bi bi-mortarboard-fill"></i> Student
                                    </span>
                                }
                            </div>
                            <div class="meta-item">
                                <span class="meta-label">Joined</span>
                                <span class="meta-value">@user.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="user-card-footer">
                        <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary flex-fill">
                            <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-outline-danger flex-fill">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
