@model IEnumerable<AttendanceSystem.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "User Management";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="bi bi-people-fill me-2"></i>User Management</h2>
    <a asp-action="CreateUser" class="btn btn-primary">
        <i class="bi bi-person-plus-fill me-1"></i>Create New User
    </a>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show">
        <i class="bi bi-check-circle-fill me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th>Created At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>
                                <i class="bi bi-person-circle me-2 text-primary"></i>
                                <strong>@user.FullName</strong>
                            </td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-danger">
                                        <i class="bi bi-shield-fill-check me-1"></i>Admin
                                    </span>
                                }
                                else if (user.Role == "Teacher")
                                {
                                    <span class="badge bg-primary">
                                        <i class="bi bi-person-workspace me-1"></i>Teacher
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="bi bi-mortarboard-fill me-1"></i>Student
                                    </span>
                                }
                            </td>
                            <td>@user.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-outline-primary">
                                        <i class="bi bi-pencil-fill"></i> Edit
                                    </a>
                                    <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-outline-danger">
                                        <i class="bi bi-trash-fill"></i> Delete
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        @if (!Model.Any())
        {
            <div class="text-center text-muted py-5">
                <i class="bi bi-inbox" style="font-size: 3rem;"></i>
                <p class="mt-3">No users found.</p>
            </div>
        }
    </div>
</div>
