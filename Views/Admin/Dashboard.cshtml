@{
    ViewData["Title"] = "Admin Dashboard";
}

<h2 class="mb-4"><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h2>

<div class="row g-4 mb-4">
    <div class="col-md-3">
        <div class="card shadow-sm border-primary">
            <div class="card-body text-center">
                <i class="bi bi-people-fill text-primary" style="font-size: 2.5rem;"></i>
                <h3 class="mt-3 mb-0">@ViewBag.TotalUsers</h3>
                <p class="text-muted mb-0">Total Users</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-success">
            <div class="card-body text-center">
                <i class="bi bi-mortarboard-fill text-success" style="font-size: 2.5rem;"></i>
                <h3 class="mt-3 mb-0">@ViewBag.StudentCount</h3>
                <p class="text-muted mb-0">Students</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-info">
            <div class="card-body text-center">
                <i class="bi bi-person-workspace text-info" style="font-size: 2.5rem;"></i>
                <h3 class="mt-3 mb-0">@ViewBag.TeacherCount</h3>
                <p class="text-muted mb-0">Teachers</p>
            </div>
        </div>
    </div>

    <div class="col-md-3">
        <div class="card shadow-sm border-warning">
            <div class="card-body text-center">
                <i class="bi bi-book-fill text-warning" style="font-size: 2.5rem;"></i>
                <h3 class="mt-3 mb-0">@ViewBag.TotalCourses</h3>
                <p class="text-muted mb-0">Total Courses</p>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-person-check-fill text-primary" style="font-size: 2.5rem;"></i>
                <h3 class="mt-3 mb-0">@ViewBag.TotalEnrollments</h3>
                <p class="text-muted mb-0">Total Enrollments</p>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-body text-center">
                <i class="bi bi-calendar-check-fill text-success" style="font-size: 2.5rem;"></i>
                <h3 class="mt-3 mb-0">@ViewBag.TotalAttendance</h3>
                <p class="text-muted mb-0">Attendance Records</p>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="bi bi-list-task me-2"></i>Quick Actions</h5>
            </div>
            <div class="card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-action="Users" class="btn btn-outline-primary w-100">
                            <i class="bi bi-people-fill me-2"></i>Manage Users
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Course" asp-action="Index" class="btn btn-outline-warning w-100">
                            <i class="bi bi-book-fill me-2"></i>View All Courses
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="CreateUser" class="btn btn-outline-success w-100">
                            <i class="bi bi-person-plus-fill me-2"></i>Create New User
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
