@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="page-header mb-5">
    <div>
        <h1 class="page-title mb-2">Admin Dashboard</h1>
        <p class="page-subtitle mb-0">System overview and management</p>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-6 col-xl-3">
        <div class="stat-card stat-card-primary">
            <div class="stat-icon">
                <i class="bi bi-people-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalUsers</div>
                <div class="stat-label">Total Users</div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="stat-card stat-card-success">
            <div class="stat-icon">
                <i class="bi bi-mortarboard-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.StudentCount</div>
                <div class="stat-label">Students</div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="stat-card stat-card-info">
            <div class="stat-icon">
                <i class="bi bi-person-workspace"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TeacherCount</div>
                <div class="stat-label">Teachers</div>
            </div>
        </div>
    </div>

    <div class="col-md-6 col-xl-3">
        <div class="stat-card stat-card-warning">
            <div class="stat-icon">
                <i class="bi bi-book-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalCourses</div>
                <div class="stat-label">Total Courses</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4 mb-5">
    <div class="col-md-6">
        <div class="stat-card stat-card-primary">
            <div class="stat-icon">
                <i class="bi bi-person-check-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalEnrollments</div>
                <div class="stat-label">Total Enrollments</div>
            </div>
        </div>
    </div>

    <div class="col-md-6">
        <div class="stat-card stat-card-success">
            <div class="stat-icon">
                <i class="bi bi-calendar-check-fill"></i>
            </div>
            <div class="stat-content">
                <div class="stat-value">@ViewBag.TotalAttendance</div>
                <div class="stat-label">Attendance Records</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-12">
        <div class="action-card">
            <div class="action-card-header">
                <i class="bi bi-lightning-charge-fill"></i>
                <h5 class="mb-0">Quick Actions</h5>
            </div>
            <div class="action-card-body">
                <div class="row g-3">
                    <div class="col-md-4">
                        <a asp-action="Users" class="admin-action-btn">
                            <div class="admin-action-icon bg-primary-subtle">
                                <i class="bi bi-people-fill text-primary"></i>
                            </div>
                            <div>
                                <div class="admin-action-title">Manage Users</div>
                                <div class="admin-action-desc">View and edit all users</div>
                            </div>
                            <i class="bi bi-arrow-right ms-auto"></i>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-controller="Course" asp-action="Index" class="admin-action-btn">
                            <div class="admin-action-icon bg-warning-subtle">
                                <i class="bi bi-book-fill text-warning"></i>
                            </div>
                            <div>
                                <div class="admin-action-title">View Courses</div>
                                <div class="admin-action-desc">Manage all courses</div>
                            </div>
                            <i class="bi bi-arrow-right ms-auto"></i>
                        </a>
                    </div>
                    <div class="col-md-4">
                        <a asp-action="CreateUser" class="admin-action-btn">
                            <div class="admin-action-icon bg-success-subtle">
                                <i class="bi bi-person-plus-fill text-success"></i>
                            </div>
                            <div>
                                <div class="admin-action-title">Create User</div>
                                <div class="admin-action-desc">Add new user account</div>
                            </div>
                            <i class="bi bi-arrow-right ms-auto"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
