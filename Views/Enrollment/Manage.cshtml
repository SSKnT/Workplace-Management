@model AttendanceSystem.Models.Course
@{
    ViewData["Title"] = "Manage Enrollments";
    var course = ViewBag.Course as AttendanceSystem.Models.Course;
    var availableStudents = ViewBag.AvailableStudents as List<AttendanceSystem.Models.ApplicationUser>;
}

<div class="mb-4">
    <div class="d-flex justify-content-between align-items-center">
        <div>
            <h2><i class="bi bi-people"></i> Manage Enrollments</h2>
            <p class="text-muted">
                <strong>@Model.CourseCode</strong> - @Model.Name
                @if (Model.Teacher != null)
                {
                    <span class="badge bg-info ms-2">@Model.Teacher.FullName</span>
                }
            </p>
        </div>
        <a asp-controller="Course" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Course
        </a>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle"></i> @TempData["Warning"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-x-circle"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-7">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-person-check"></i> Enrolled Students (@Model.Enrollments.Count)</h5>
            </div>
            <div class="card-body">
                @if (!Model.Enrollments.Any())
                {
                    <div class="text-center py-4">
                        <i class="bi bi-inbox" style="font-size: 3rem; color: #6c757d;"></i>
                        <p class="text-muted mt-3">No students enrolled yet.</p>
                    </div>
                }
                else
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Student Name</th>
                                    <th>Email</th>
                                    <th>Enrolled On</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var enrollment in Model.Enrollments.OrderBy(e => e.Student.FullName))
                                {
                                    <tr>
                                        <td>
                                            <i class="bi bi-person-circle"></i> @enrollment.Student.FullName
                                        </td>
                                        <td>@enrollment.Student.Email</td>
                                        <td>@enrollment.EnrolledAt.ToString("MMM dd, yyyy")</td>
                                        <td>
                                            <form asp-action="Remove" method="post" class="d-inline" 
                                                  onsubmit="return confirm('Are you sure you want to remove this student?');">
                                                <input type="hidden" name="id" value="@enrollment.Id" />
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-person-plus"></i> Add Students</h5>
            </div>
            <div class="card-body">
                @if (availableStudents == null || !availableStudents.Any())
                {
                    <p class="text-muted">All students are already enrolled in this course.</p>
                }
                else
                {
                    <form asp-action="BulkEnroll" method="post" id="bulkEnrollForm">
                        <input type="hidden" name="courseId" value="@Model.Id" />
                        
                        <div class="mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="selectAll">
                                <label class="form-check-label fw-bold" for="selectAll">
                                    Select All (@availableStudents.Count students)
                                </label>
                            </div>
                        </div>
                        
                        <hr>
                        
                        <div style="max-height: 400px; overflow-y: auto;">
                            @foreach (var student in availableStudents.OrderBy(s => s.FullName))
                            {
                                <div class="form-check mb-2">
                                    <input class="form-check-input student-checkbox" type="checkbox" 
                                           name="studentIds" value="@student.Id" id="student_@student.Id">
                                    <label class="form-check-label" for="student_@student.Id">
                                        <i class="bi bi-person"></i> @student.FullName
                                        <small class="text-muted d-block">@student.Email</small>
                                    </label>
                                </div>
                            }
                        </div>
                        
                        <div class="mt-3">
                            <button type="submit" class="btn btn-primary w-100">
                                <i class="bi bi-plus-circle"></i> Enroll Selected Students
                            </button>
                        </div>
                    </form>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('selectAll')?.addEventListener('change', function() {
            const checkboxes = document.querySelectorAll('.student-checkbox');
            checkboxes.forEach(cb => cb.checked = this.checked);
        });

        // Update "Select All" if individual checkboxes change
        document.querySelectorAll('.student-checkbox').forEach(cb => {
            cb.addEventListener('change', function() {
                const selectAll = document.getElementById('selectAll');
                const allChecked = Array.from(document.querySelectorAll('.student-checkbox'))
                    .every(checkbox => checkbox.checked);
                if (selectAll) selectAll.checked = allChecked;
            });
        });
    </script>
}
