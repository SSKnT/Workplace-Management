@model AttendanceSystem.Models.Course
@{
    ViewData["Title"] = "Delete Course";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="bi bi-exclamation-triangle"></i> Delete Course</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="bi bi-exclamation-triangle-fill"></i>
                    <strong>Warning!</strong> Are you sure you want to delete this course? This action cannot be undone.
                </div>
                
                <dl class="row">
                    <dt class="col-sm-4">Course Code</dt>
                    <dd class="col-sm-8"><strong>@Model.CourseCode</strong></dd>
                    
                    <dt class="col-sm-4">Course Name</dt>
                    <dd class="col-sm-8">@Model.Name</dd>
                    
                    <dt class="col-sm-4">Teacher</dt>
                    <dd class="col-sm-8">@(Model.Teacher?.FullName ?? "Not assigned")</dd>
                    
                    <dt class="col-sm-4">Enrolled Students</dt>
                    <dd class="col-sm-8">
                        <span class="badge bg-danger">@Model.Enrollments.Count students</span>
                    </dd>
                </dl>
                
                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash"></i> Confirm Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
