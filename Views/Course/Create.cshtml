@model AttendanceSystem.Models.Course
@{
    ViewData["Title"] = "Create Course";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4><i class="bi bi-plus-circle"></i> Create New Course</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-8 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="e.g., Introduction to Computer Science" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-4 mb-3">
                            <label asp-for="CourseCode" class="form-label"></label>
                            <input asp-for="CourseCode" class="form-control" placeholder="e.g., CS101" />
                            <span asp-validation-for="CourseCode" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Course description..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CreditHours" class="form-label"></label>
                            <input asp-for="CreditHours" class="form-control" type="number" min="1" max="6" />
                            <span asp-validation-for="CreditHours" class="text-danger"></span>
                        </div>
                        
                        <div class="col-md-6 mb-3">
                            <label asp-for="TeacherId" class="form-label">Teacher</label>
                            <select asp-for="TeacherId" class="form-select" asp-items="ViewBag.Teachers">
                                <option value="">-- Select Teacher (Optional) --</option>
                            </select>
                            <span asp-validation-for="TeacherId" class="text-danger"></span>
                        </div>
                    </div>
                    
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Create Course
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
