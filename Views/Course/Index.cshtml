@model IEnumerable<AttendanceSystem.Models.Course>
@{
    ViewData["Title"] = "Courses";
}

<div class="page-header mb-4">
    <div class="d-flex justify-content-between align-items-start">
        <div>
            <h1 class="page-title mb-2">Courses</h1>
            <p class="page-subtitle mb-0">Manage all courses and their enrollments</p>
        </div>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-gradient">
                <i class="bi bi-plus-circle"></i> Add New Course
            </a>
        }
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success-modern alert-dismissible fade show" role="alert">
        <div class="alert-icon">
            <i class="bi bi-check-circle-fill"></i>
        </div>
        <div class="alert-content">
            @TempData["Success"]
        </div>
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (!Model.Any())
{
    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="bi bi-book"></i>
        </div>
        <h3 class="empty-state-title">No Courses Yet</h3>
        <p class="empty-state-text">Create your first course to get started with the attendance system.</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-gradient btn-lg">
                <i class="bi bi-plus-circle"></i> Create First Course
            </a>
        }
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var course in Model)
        {
            <div class="col-md-6 col-xl-4">
                <div class="course-manage-card">
                    <div class="course-manage-header">
                        <div class="d-flex justify-content-between align-items-start mb-2">
                            <span class="course-code-badge">@course.CourseCode</span>
                            <span class="enrollment-count-badge">
                                <i class="bi bi-people-fill"></i> @course.Enrollments.Count
                            </span>
                        </div>
                        <h5 class="course-title mb-3">@course.Name</h5>
                        
                        <div class="course-info-grid">
                            <div class="info-item">
                                <i class="bi bi-clock-fill"></i>
                                <span>@course.CreditHours Credits</span>
                            </div>
                            <div class="info-item">
                                <i class="bi bi-person-circle"></i>
                                <span>
                                    @if (course.Teacher != null)
                                    {
                                        @course.Teacher.FullName
                                    }
                                    else
                                    {
                                        <span class="text-muted">No teacher</span>
                                    }
                                </span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="course-manage-footer">
                        <div class="action-buttons">
                            <a asp-action="Details" asp-route-id="@course.Id" 
                               class="btn btn-outline-primary flex-fill">
                                <i class="bi bi-eye"></i> View
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@course.Id" 
                                   class="btn btn-outline-secondary">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-action="Delete" asp-route-id="@course.Id" 
                                   class="btn btn-outline-danger">
                                    <i class="bi bi-trash"></i>
                                </a>
                            }
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-controller="Enrollment" asp-action="Manage" asp-route-id="@course.Id" 
                                   class="btn btn-light-primary">
                                    <i class="bi bi-person-plus"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
